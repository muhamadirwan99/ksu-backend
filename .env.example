# KSU Backend Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=mysql://username:password@host:port/database?allowPublicKeyRetrieval=true
DATABASE_URL_NEW=mysql://username:password@host:port/database?allowPublicKeyRetrieval=true

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here

# Backup Configuration
BACKUP_MYSQL_HOST=your_database_host
BACKUP_MYSQL_PORT=3306
BACKUP_MYSQL_USER=your_database_user
BACKUP_MYSQL_PASSWORD=your_database_password
BACKUP_MYSQL_DATABASE=your_database_name
BACKUP_DIRECTORY=/app/backups
BACKUP_RETENTION_DAYS=30

# Application Settings
NODE_ENV=production
PORT=3000

# Logging
LOG_LEVEL=info
LOG_FILE=/app/logs/application.log
